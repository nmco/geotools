          <sourceExpression>
            <OCQL>jsonSelect('data.datex.datex.headerInformation.areaOfInterest')</OCQL>
          </sourceExpression>
        </AttributeMapping>
        <AttributeMapping>
          <targetAttribute>npra:situation/datex:headerInformation/datex:confidentiality</targetAttribute>
